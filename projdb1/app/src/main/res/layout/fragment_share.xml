<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/exportdbbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Экспорт базы данных"
        android:onClick="ExportDb" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/text1"
        android:text="(База будет зашифрована вашим паролем)"
        android:layout_below="@id/exportdbbutton"/>
    <Button
        android:id="@+id/importdbbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Импорт базы данных"
        android:layout_below="@id/text1"
        android:onClick="Importdb" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/text2"
        android:text="(ВСЕ СТАРЫЕ ДАННЫЕ БУДУТ СТЁРТЫ!)"
        android:layout_below="@id/importdbbutton"/>
    <Button
        android:id="@+id/jsondbbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Экпорт в json"
        android:layout_below="@id/text2"
        android:onClick="expjsondb" />
